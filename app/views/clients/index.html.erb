<h1>Listing Clients</h1>

<table>
  <tr>
    <th class = "p-2">Name</th>
    <th class = "p-2">Address</th>
    <th class = "p-2">Phone Number</th>
    <th colspan="2"></th>
  </tr>

  <% @clients.each do |client| %>
    <tr>
      <td class = "p-2"><%= client.name %></td>
      <td class = "p-2"><%= client.address %></td>
      <td class = "p-2"><%= client.phone_number %></td>
      <td class = "p-2"><%= link_to 'Show', client_path(client) %></td>
      <td class = "p-2"><%= link_to 'Edit', edit_client_path(client) %></td>
      <td class = "p-2"><%= link_to 'Destroy', client_path(client), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
